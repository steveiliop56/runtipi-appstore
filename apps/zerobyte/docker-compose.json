{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "zerobyte",
      "image": "ghcr.io/nicotsx/zerobyte:v0.29.2",
      "internalPort": 4096,
      "isMain": true,
      "capAdd": ["SYS_ADMIN"],
      "devices": ["/dev/fuse:/dev/fuse"],
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "BASE_URL",
          "value": "${ZEROBYTE_BASE_URL}"
        },
        {
          "key": "APP_SECRET",
          "value": "${ZEROBYTE_APP_SECRET}"
        }
      ],
      "volumes": [
        {
          "containerPath": "/var/lib/zerobyte",
          "hostPath": "/var/lib/zerobyte",
          "bind": {
            "propagation": "rshared"
          }
        },
        {
          "containerPath": "/etc/localtime",
          "hostPath": "/etc/localtime",
          "readOnly": true
        }
      ]
    }
  ]
}
