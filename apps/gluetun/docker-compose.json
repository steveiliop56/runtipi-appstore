{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "gluetun",
      "image": "qmcgaw/gluetun:v3.41.1",
      "isMain": true,
      "capAdd": ["NET_ADMIN"],
      "devices": ["/dev/net/tun"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/gluetun"
        }
      ],
      "environment": [
        {
          "key": "VPN_SERVICE_PROVIDER",
          "value": "${GLUETUN_VPN_PROVIDER}"
        },
        {
          "key": "VPN_TYPE",
          "value": "wireguard"
        },
        {
          "key": "WIREGUARD_PRIVATE_KEY",
          "value": "${GLUETUN_WIREGUARD_PRIVATE_KEY}"
        },
        {
          "key": "WIREGUARD_ADDRESSES",
          "value": "${GLUETUN_WIREGUARD_ADDRESSES}"
        },
        {
          "key": "SERVER_CITIES",
          "value": "${GLUETUN_SERVER_CITIES}"
        }
      ]
    }
  ],
  "schemaVersion": 2
}
