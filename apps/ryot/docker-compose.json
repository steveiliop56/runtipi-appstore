{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "ryot",
      "image": "ghcr.io/ignisda/ryot:v10.1.1",
      "isMain": true,
      "internalPort": 8000,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "FRONTEND_URL",
          "value": "${RYOT_FRONTEND_URL}"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgres://ryot:${RYOT_DB_PASSWORD}@ryot-db:5432/ryot"
        },
        {
          "key": "SERVER_ADMIN_ACCESS_TOKEN",
          "value": "${RYOT_ADMIN_ACCESS_TOKEN}"
        }
      ]
    },
    {
      "name": "ryot-db",
      "image": "postgres:18-alpine",
      "volumes": [
        {
          "containerPath": "/var/lib/postgresql",
          "hostPath": "${APP_DATA_DIR}/data/db"
        }
      ],
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "ryot"
        },
        {
          "key": "POSTGRES_USER",
          "value": "ryot"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${RYOT_DB_PASSWORD}"
        }
      ]
    }
  ],
  "schemaVersion": 2
}
