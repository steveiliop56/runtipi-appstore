{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "image": "ghcr.io/kanbn/kan:0.5.1",
      "name": "kan",
      "internalPort": 3000,
      "isMain": true,
      "environment": [
        {
          "key": "NEXT_PUBLIC_BASE_URL",
          "value": "${KAN_NEXT_PUBLIC_BASE_URL}"
        },
        {
          "key": "BETTER_AUTH_SECRET",
          "value": "${KAN_BETTER_AUTH_SECRET}"
        },
        {
          "key": "POSTGRES_URL",
          "value": "postgresql://kan:${KAN_DB_PASSWORD}@kan-db:5432/kan-db?sslmode=disable"
        },
        {
          "key": "NEXT_PUBLIC_ALLOW_CREDENTIALS",
          "value": "true"
        }
      ],
      "dependsOn": {
        "kan-db": {
          "condition": "service_started"
        }
      }
    },
    {
      "image": "postgres:15",
      "name": "kan-db",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "kan-db"
        },
        {
          "key": "POSTGRES_USER",
          "value": "kan"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${KAN_DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2
}
