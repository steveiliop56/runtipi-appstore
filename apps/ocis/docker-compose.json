{
    "$schema": "../dynamic-compose-schema.json",
    "services": [
        {
            "name": "ocis",
            "image": "owncloud/ocis:7.1.3",
            "isMain": true,
            "internalPort": 9200,
            "environment": {
                "OCIS_INSECURE": "true",
                "OCIS_URL": "${OCIS_URL}",
                "OCIS_LOG_LEVEL": "info"
            },
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config/ocis.yaml",
                    "containerPath": "/etc/ocis/ocis.yaml"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/data/ocis",
                    "containerPath": "/var/lib/ocis"
                }
            ]
        }
    ]
}