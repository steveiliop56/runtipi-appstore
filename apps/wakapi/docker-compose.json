{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "wakapi",
      "image": "ghcr.io/muety/wakapi:2.16.1",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "WAKAPI_PASSWORD_SALT",
          "value": "${WAKAPI_PASSWORD_SALT}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/wakapi",
          "containerPath": "/data"
        }
      ]
    }
  ],
  "schemaVersion": 2
}
