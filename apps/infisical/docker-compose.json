{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "infisical",
      "image": "infisical/infisical:v0.146.0-postgres",
      "internalPort": 8080,
      "isMain": true,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "ENCRYPTION_KEY",
          "value": "${INFISICAL_ENCRYPTION_KEY}"
        },
        {
          "key": "AUTH_SECRET",
          "value": "${INFISICAL_AUTH_SECRET}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${INFISICAL_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "infisical"
        },
        {
          "key": "POSTGRES_DB",
          "value": "infisical"
        },
        {
          "key": "DB_CONNECTION_URI",
          "value": "postgres://infisical:${INFISICAL_DB_PASSWORD}@infisical-db:5432/infisical"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://infisical-redis:6379"
        },
        {
          "key": "SITE_URL",
          "value": "${INFISICAL_SITE_URL}"
        }
      ],
      "dependsOn": {
        "infisical-redis": {
          "condition": "service_started"
        },
        "infisical-db": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "infisical-redis",
      "image": "redis:8",
      "environment": [
        {
          "key": "ALLOW_EMPTY_PASSWORD",
          "value": "yes"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "infisical-db",
      "image": "postgres:14-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "infisical"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${INFISICAL_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "infisical"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready --username=infisical && psql --username=infisical --list",
        "interval": "5s",
        "timeout": "10s",
        "retries": 10
      }
    }
  ],
  "schemaVersion": 2
}
