{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "pocket-id",
      "image": "ghcr.io/pocket-id/pocket-id:v1.16.0",
      "internalPort": 1411,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        }
      ],
      "environment": [
        {
          "key": "APP_URL",
          "value": "${POCKET_ID_APP_URL}"
        },
        {
          "key": "TRUST_PROXY",
          "value": "true"
        },
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        }
      ],
      "healthCheck": {
        "test": "curl -f http://localhost:1411/healthz",
        "interval": "1m30s",
        "timeout": "5s",
        "retries": 2,
        "startPeriod": "10s"
      }
    }
  ],
  "schemaVersion": 2
}
