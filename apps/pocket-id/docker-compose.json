{
    "$schema": "../dynamic-compose-schema.json",
    "services": [
        {
            "name": "pocket-id",
            "image": "ghcr.io/pocket-id/pocket-id:v1.1.0",
            "internalPort": 80,
            "isMain": true,
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data",
                    "containerPath": "/app/backend/data"
                }
            ],
            "environment": {
                "PUBLIC_APP_URL": "${POCKET_ID_APP_URL}",
                "TRUST_PROXY": "true",
                "PUID": "1000",
                "PGID": "1000"
            },
            "healthCheck": {
                "test": "curl -f http://localhost/healthz",
                "interval": "1m30s",
                "timeout": "5s",
                "retries": 2,
                "startPeriod": "10s"
            }
        }
    ]
}