{
    "$schema": "../dynamic-compose-schema.json",
    "services": [
        {
            "name": "coder",
            "image": "ghcr.io/coder/coder:v2.22.1",
            "internalPort": 7080,
            "isMain": true,
            "user": "0:0",
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/coder",
                    "containerPath": "/home/coder"
                },
                {
                    "hostPath": "/var/run/docker.sock",
                    "containerPath": "/var/run/docker.sock"
                }
            ],
            "environment": {
                "CODER_PG_CONNECTION_URL": "postgresql://coder:${CODER_DB_PASSWORD}@coder-db/coder?sslmode=disable",
                "CODER_HTTP_ADDRESS": "0.0.0.0:7080",
                "CODER_ACCESS_URL": "${CODER_ACCESS_URL}"
            },
            "dependsOn": [
                "coder-db"
            ]
        },
        {
            "name": "coder-db",
            "image": "postgres:16",
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/db",
                    "containerPath": "/var/lib/postgresql/data"
                }
            ],
            "environment": {
                "POSTGRES_USER": "coder",
                "POSTGRES_PASSWORD": "${CODER_DB_PASSWORD}",
                "POSTGRES_DB": "coder"
            },
            "healthCheck": {
                "test": "pg_isready -U coder -d coder",
                "interval": "5s",
                "timeout": "5s",
                "retries": 3
            }
        }
    ]
}