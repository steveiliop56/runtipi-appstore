{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "coder",
      "image": "ghcr.io/coder/coder:v2.28.0",
      "internalPort": 7080,
      "isMain": true,
      "user": "0:0",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/coder",
          "containerPath": "/home/coder"
        },
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        }
      ],
      "environment": [
        {
          "key": "CODER_PG_CONNECTION_URL",
          "value": "postgresql://coder:${CODER_DB_PASSWORD}@coder-db/coder?sslmode=disable"
        },
        {
          "key": "CODER_HTTP_ADDRESS",
          "value": "0.0.0.0:7080"
        },
        {
          "key": "CODER_ACCESS_URL",
          "value": "${CODER_ACCESS_URL}"
        }
      ],
      "dependsOn": ["coder-db"]
    },
    {
      "name": "coder-db",
      "image": "postgres:16",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "coder"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${CODER_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "coder"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U coder -d coder",
        "interval": "5s",
        "timeout": "5s",
        "retries": 3
      }
    }
  ],
  "schemaVersion": 2
}
