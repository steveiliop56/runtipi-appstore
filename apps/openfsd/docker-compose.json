{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "image": "ghcr.io/renorris/openfsd:fsd-latest",
      "name": "fsd",
      "environment": [
        {
          "key": "DATABASE_SOURCE_NAME",
          "value": "/db/openfsd.db?_pragma=busy_timeout(5000)&_pragma=journal_mode(WAL)"
        },
        {
          "key": "DATABASE_AUTO_MIGRATE",
          "value": "true"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/db"
        }
      ],
      "addPorts": [
        {
          "containerPort": 6809,
          "hostPort": 6809,
          "tcp": true
        }
      ]
    },
    {
      "image": "ghcr.io/renorris/openfsd:web-latest",
      "name": "fsdweb",
      "internalPort": 8000,
      "isMain": true,
      "environment": [
        {
          "key": "DATABASE_SOURCE_NAME",
          "value": "/db/openfsd.db?_pragma=busy_timeout(5000)&_pragma=journal_mode(WAL)"
        },
        {
          "key": "FSD_HTTP_SERVICE_ADDRESS",
          "value": "http://fsd:13618"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/db"
        }
      ],
      "dependsOn": {
        "fsd": {
          "condition": "service_started"
        }
      }
    }
  ],
  "schemaVersion": 2
}
