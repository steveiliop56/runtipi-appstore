{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "gitea",
      "image": "docker.gitea.com/gitea:1.25.1",
      "internalPort": 3000,
      "isMain": true,
      "environment": [
        {
          "key": "USER_UID",
          "value": "1000"
        },
        {
          "key": "USER_GID",
          "value": "1000"
        },
        {
          "key": "GITEA__database__DB_TYPE",
          "value": "postgres"
        },
        {
          "key": "GITEA__database__HOST",
          "value": "gitea-db:5432"
        },
        {
          "key": "GITEA__database__NAME",
          "value": "gitea"
        },
        {
          "key": "GITEA__database__USER",
          "value": "gitea"
        },
        {
          "key": "GITEA__database__PASSWD",
          "value": "${GITEA_DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/gitea",
          "containerPath": "/data"
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true
        },
        {
          "hostPath": "/etc/timezone",
          "containerPath": "/etc/timezone",
          "readOnly": true
        }
      ],
      "addPorts": [
        {
          "containerPort": 22,
          "hostPort": 2222
        }
      ],
      "dependsOn": ["gitea-db"]
    },
    {
      "name": "gitea-db",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "gitea"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${GITEA_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "gitea"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2
}
