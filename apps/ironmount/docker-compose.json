{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "ironmount",
      "image": "ghcr.io/nicotsx/ironmount:v0.6.2",
      "internalPort": 4096,
      "isMain": true,
      "capAdd": ["SYS_ADMIN"],
      "devices": ["/dev/fuse:/dev/fuse"],
      "volumes": [
        {
          "containerPath": "/var/lib/ironmount",
          "hostPath": "/var/lib/ironmount",
          "bind": {
            "propagation": "rshared"
          }
        },
        {
          "containerPath": "/run/docker/plugins",
          "hostPath": "/run/docker/plugins"
        },
        {
          "containerPath": "/var/run/docker.sock",
          "hostPath": "/var/run/docker.sock"
        }
      ]
    }
  ]
}
